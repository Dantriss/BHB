<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardMapper">


	<select id="noticeList" resultType="Board_NoticeDTO">
		select *
		from board_notice
		order by bn_num desc
	</select>
	
	<select id="boardNotice" resultType="Board_NoticeDTO" parameterType="int">
		select *
		from board_notice
		where bn_num=#{bn_num}
	</select>
	
 	<select id="boardLessorList" resultType="Board_LessorDTO">
		select *
		from board_lessor
		order by bl_hit
	</select>
	
	<select id="boardLessor" resultType="Board_LessorDTO" parameterType="int">
		select *
		from board_lessor
		where bl_num=#{bl_num}
	</select>
	<select id="myBoardList" resultType="Board_LessorDTO" parameterType="string">
		select *
		from board_lessor
		where bl_lessorid=#{bl_lessorid}
	</select>
	
	<insert id="writeAction" parameterType="Board_LessorDTO">
        insert into board_lessor(bl_num,bl_title,bl_lessorid,bl_nick,bl_date,bl_hit,bl_content)
        values(#{bl_num},#{bl_title},#{bl_lessorid},#{bl_nick},#{bl_date},0,#{bl_content})

    </insert>
	
	<select id="boardLessorCount" resultType="int">
		select case when max(bl_num) is null then 0
			else max(bl_num) end
			from board_lessor
	</select>
	
	
	<select id="boardNoticeCount" resultType="int">
		select case when max(bn_num) is null then 0
			else max(bn_num) end
			from board_notice
	</select>
	
	<delete id="myBoardDelete" parameterType="int">
		delete from board_lessor
		where bl_num=#{bl_num}
	</delete>
	
	<update id="myBoardModify" parameterType="Board_LessorDTO">
		update board_lessor
		set bl_title=#{bl_title},bl_date=#{bl_date},bl_content=#{bl_content}
		where bl_num=#{bl_num}
	</update>
	<update id="boardHitChange" parameterType="Board_LessorDTO">
		update board_lessor
		set bl_hit=#{bl_hit}
		where bl_num=#{bl_num}
	</update>
	
	
	<!-- 정보게시판 게시물 총 게시물 -->
	<select id="blListTotal" resultType="int">
		select count(*) as total from board_lessor
	</select>
	
	
	
	<!-- 정보게시판 페이징 처리 SQL -->
 	<select id="getBlList" resultType="Board_LessorDTO">
	<![CDATA[
		select * from (select rownum rn, A.* 
		from ( Select * from Board_Lessor order by bl_num desc) A )
		where rn > (#{pageNum} -1) * #{amount} AND rn <= #{pageNum} * #{amount}
	]]>
	</select>
	
	
	<!-- 공지게시판 게시물 총 게시물 -->
	<select id="bnListTotal" resultType="int">
		select count(*) as total from board_notice
	</select>
	
	
	
	<!-- 공지게시판 페이징 처리 SQL -->
 	<select id="getBnList" resultType="Board_NoticeDTO">
	<![CDATA[
		select * from (select rownum rn, A.* 
		from ( Select * from Board_Notice order by bn_num desc) A )
		where rn > (#{pageNum} -1) * #{amount} AND rn <= #{pageNum} * #{amount}
	]]>
	</select>
</mapper>

